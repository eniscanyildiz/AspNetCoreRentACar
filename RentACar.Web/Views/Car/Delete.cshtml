@model RentACar.Entity.Entities.Car

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Car Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand?.Name</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Daily Price</dt>
        <dd class="col-sm-10">@Model.DailyPrice</dd>

        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@Model.Available</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CarId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>